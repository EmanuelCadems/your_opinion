<% if flash[:alert] %>
  <div class="alert alert-error">
    <a class="close" data-dismiss="alert" href="#">×</a><%= flash[:alert] %>
  </div>
<% end -%>
<% if flash[:notice] %>
  <div class="alert alert-success">
    <a class="close" data-dismiss="alert" href="#">×</a><%= flash[:notice] %>
  </div>
<% end -%>
