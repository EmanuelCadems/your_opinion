<div class="intro-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="intro-message">
                    <h1>Your Opinion</h1>
                    <h3>Demo</h3>
                    <hr class="intro-divider">
                    <ul class="list-inline intro-social-buttons">
                        <li>
                            <%= link_to new_survey_customer_path(@restaurant.surveys.first), class: "btn btn-default btn-lg" do %>
                                <i class="glyphicon glyphicon-glass"></i> <span class="network-name">Take survey restaurant</span>
                            <% end -%>
                        </li>

                        <li>
                            <%= link_to new_survey_customer_path(@airline.surveys.first), class: "btn btn-default btn-lg" do %>
                                <i class="glyphicon glyphicon-plane"></i> <span class="network-name">Take survey Airline</span>
                            <% end -%>
                        </li>
                    </ul>
                    <ul class="list-inline intro-social-buttons">
                        <li>
                            <%= link_to new_company_session_path, class: "btn btn-default btn-lg" do %>
                                <i class="glyphicon glyphicon-user"></i> <span class="network-name">Login with a Company</span>
                            <% end -%>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container -->

</div>
<!-- /.intro-header -->

<div class="content-section-a">

    <div class="container">

        <div class="row">
            <div class="col-lg-5 col-sm-6">
                <hr class="section-heading-spacer">
                <div class="clearfix"></div>
                <h2 class="section-heading">Create online surveys with ease.<br />
Get great feedback.</h2>
                <p class="lead">Review your customer is important, do it possible with "Your Opinion" <%= link_to 'Visit their website', new_company_registration_path %> to become a member.</p>
            </div>
            <div class="col-lg-5 col-lg-offset-2 col-sm-6">
                <%= image_tag "ipad.png", class: "img-responsive" %>
            </div>
        </div>

    </div>
    <!-- /.container -->

</div>
<!-- /.content-section-a -->

