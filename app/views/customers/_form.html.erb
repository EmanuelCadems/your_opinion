<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Survey</h3>
                </div>
                <div class="panel-body">
                    <%= form_for([parent, resource], html: {role: 'form'}) do |f| %>
                        <fieldset>
                            <% if flash[:alert] %>
                                <div class="alert alert-danger">
                                    <%= flash[:alert] %>
                                </div>
                            <% end -%>
                            <%= action_name == 'new' ? parent.introductory_text : parent.goodbye_message %>
                            <% if action_name == 'edit' %>
                                <%= f.hidden_field :name %>
                                <%= f.hidden_field :sex %>
                            <% else %>
                                <div class="form-group">
                                    <%= f.label :name %>
                                    <%= f.text_field :name, autocomplete: "true", class: "form-control", placeholder: "Name (not required)" %>
                                </div>

                                <div class="form-group">
                                    <%= f.label :sex_male, 'Male', class: "radio-inline" %>
                                    <%= f.radio_button :sex, 'Male' %>
                                    <%= f.label :sex_female, 'Female', class: "radio-inline" %>
                                    <%= f.radio_button :sex, 'Female' %>
                                </div>
                            <% end -%>

                            <% if show_comment? %>
                                <div class="form-group">
                                    <%= f.label :comment, comment_or_answer? %>
                                    <%= f.text_area :comment, class: "form-control", rows: "3" %>
                                </div>
                            <% end -%>
                            <!-- Change this to a button or input when using this as a form -->

                            <%= f.submit "Next", class: "btn btn-lg btn-success btn-block" %>
                        </fieldset>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
