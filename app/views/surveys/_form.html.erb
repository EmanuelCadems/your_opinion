<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><%= action_name.humanize %> Survey</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <%= current_company.name %>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <%= form_for(resource, html: {role: "form" }) do |f| %>
                            <div class="form-group">
                                <%= f.label :introductory_text %>
                                <%= f.text_area :introductory_text, class: "form-control", rows: "3" %>
                            </div>

                            <div class="form-group">
                                <%= f.label :goodbye_message %>
                                <%= f.text_area :goodbye_message, class: "form-control", rows: "3" %>
                            </div>

                            <div class="form-group">
                                <%= f.label :max_questions %>
                                <%= f.text_field :max_questions, autocomplete: "true", class: "form-control" %>
                            </div>

                            <div class="form-group">
                                <%= f.label :main_question %>
                                <%= f.text_field :main_question, autocomplete: "true", class: "form-control" %>
                            </div>

                            <%= f.submit "Save", class: "btn btn-default" %>
                            <button type="reset" class="btn btn-default">Reset Button</button>
                        <% end %>

                        <%= link_to "Back", :back %>
                    </div>
                    <!-- /.col-lg-6 (nested) -->


                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

