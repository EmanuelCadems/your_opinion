<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><%= action_name.humanize %> Survey</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <%= current_company.name %>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <%= form_for([parent, resource], html: {role: "form" }) do |f| %>
                            <%= devise_error_messages! %>
                            <div class="form-group">
                                <%= f.label :description %>
                                <%= f.text_field :description, autocomplete: "true", class: "form-control" %>
                            </div>

                            <div class="form-group">
                                <%= f.label :type_answer_scale, 'Scale', class: "radio-inline" %>
                                <%= f.radio_button :type_answer, 'Scale' %>

                                <%= f.label :type_answer_yes_or_not, 'Yes Or Not', class: "radio-inline" %>
                                <%= f.radio_button :type_answer, 'Yes Or Not' %>

                                <%= f.label :type_answer_happy_level, 'Happy Level', class: "radio-inline" %>
                                <%= f.radio_button :type_answer, 'Happy Level' %>

                            </div>

                            <%= f.submit "Save", class: "btn btn-default" %>
                            <button type="reset" class="btn btn-default">Reset Button</button>
                        <% end %>

                        <%= link_to "Back", :back %>
                    </div>
                    <!-- /.col-lg-6 (nested) -->


                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

