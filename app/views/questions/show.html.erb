<% content_for :head do %>
    <%= stylesheet_link_tag "morris/morris-0.4.3.min", media: "all", "data-turbolinks-track" => true %>
<% end %>
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Statistics</h1>
        <h4><%= resource.description %></h4>
        <h5><em><b>Total Answers:</b></em> <%= resource.answers.count %></h5>
        <h5>
            <% case resource.type_answer
                when 'Happy Level'%>
                <em><b>Total Satisfied:</b></em> <%= resource.answers.satisfied.count %>
                <em><b>Total Neutral:</b></em> <%= resource.answers.neutral.count %>
                <em><b>Total Unsatisfied:</b></em> <%= resource.answers.unsatisfied.count %>
            <%  when 'Yes Or Not'%>
                <em><b>Total Yeses:</b></em> <%= resource.answers.yes.count %>
                <em><b>Total Not:</b></em>   <%= resource.answers.not.count %>
            <%  when 'Scale'%>
                <em><b>Total:</b></em> <%= resource.answers.total_scale %>
            <% end -%>
        </h5>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                Area Chart
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div id="morris-area-chart"></div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-6 -->
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                Bar Chart
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div id="morris-bar-chart"></div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-6 -->
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                Line Chart
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div id="morris-line-chart"></div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-6 -->
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                Donut Chart
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div id="morris-donut-chart"></div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-6 -->
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Morris.js Usage
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <p>Morris.js is a jQuery based charting plugin created by Olly Smith. In SB Admin, we are using the most recent version of Morris.js which includes the resize function, which makes the charts fully responsive. The documentation for Morris.js is available on their website, <a target="_blank" href="http://www.oesmith.co.uk/morris.js/">http://www.oesmith.co.uk/morris.js/</a>.</p>
                <a target="_blank" class="btn btn-default btn-lg btn-block" href="http://www.oesmith.co.uk/morris.js/">View Morris.js Documentation</a>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-6 -->
</div>

<% content_for :javascript do %>
    <%= javascript_include_tag "statistics.js"%>
    <%= javascript_include_tag "plugins/morris/raphael-2.1.0.min"%>
    <%= javascript_include_tag "plugins/morris/morris"%>
    <%= javascript_include_tag "demo/morris-demo"%>
<% end %>
<!-- /.row -->
